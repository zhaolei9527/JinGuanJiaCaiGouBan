<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x37"
        android:background="@color/bgtitle"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/fl_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/back" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="连接设置"
            android:textColor="@color/white"
            android:textSize="@dimen/x15" />

        <LinearLayout
            android:id="@+id/ll_Save_Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@mipmap/save" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/x13" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y15"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="链接名称"
                        android:textSize="@dimen/x12" />

                    <EditText
                        android:id="@+id/tv_Link_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y33"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请设置链接名"
                        android:singleLine="true"
                        android:text="sakura"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x12" />

                    <FrameLayout
                        android:id="@+id/fl_More_Link"
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x25">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x10"
                            android:layout_gravity="center"
                            android:background="@mipmap/down" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_Delete"
                        android:layout_width="@dimen/x30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        android:text="删除"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="服务器IP"
                        android:textSize="@dimen/x12" />

                    <EditText
                        android:id="@+id/et_Service_IP"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y33"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入服务器IP地址"
                        android:singleLine="true"
                        android:text="www.jgjyun.cn"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x12" />

                    <FrameLayout
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x25"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_launcher" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="@dimen/x30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        android:text="删除"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="端 口 号"
                        android:textSize="@dimen/x12" />

                    <EditText
                        android:id="@+id/et_Service_Host"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y33"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入端口号"
                        android:singleLine="true"
                        android:text="1435"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x12" />

                    <FrameLayout
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x25"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_launcher" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="@dimen/x30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        android:text="删除"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="登 录 名"
                        android:textSize="@dimen/x12" />

                    <EditText
                        android:id="@+id/et_Service_username"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y33"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入登录名"
                        android:singleLine="true"
                        android:text="temp"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x12" />

                    <FrameLayout
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x25"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_launcher" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="@dimen/x30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        android:text="删除"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="密      码"
                        android:textSize="@dimen/x12" />

                    <EditText
                        android:id="@+id/et_Service_pwd"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y33"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x12" />

                    <FrameLayout
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x25"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_launcher" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="@dimen/x30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        android:text="删除"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12"
                        android:visibility="invisible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginRight="@dimen/x20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="@dimen/x50"
                        android:layout_height="wrap_content"
                        android:text="数 据 库"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:id="@+id/tv_check_DB"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y33"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="请选择数据库"
                        android:singleLine="true"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x12" />

                    <FrameLayout
                        android:layout_width="@dimen/x25"
                        android:layout_height="@dimen/x25"
                        android:visibility="invisible">

                        <ImageView
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_launcher" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_query_DB"
                        android:layout_width="@dimen/x30"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x5"
                        android:gravity="center"
                        android:text="查询"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x12"
                        android:visibility="visible" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginLeft="@dimen/x50"
                    android:layout_marginRight="@dimen/x30"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginRight="@dimen/x15"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x16"
                    android:layout_height="@dimen/x16"
                    android:background="@mipmap/changepwd" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:text="修改密码"
                    android:textColor="@color/bgtitle" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_do_change_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y33"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@drawable/bg_link_psd"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密码："
                        android:textColor="@color/text333" />

                    <EditText
                        android:id="@+id/et_app_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/text333" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y33"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginRight="@dimen/x15"
                    android:background="@drawable/bg_link_psd"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认密码："
                        android:textColor="@color/text333" />

                    <EditText
                        android:id="@+id/et_app_pwd_again"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:textColor="@color/text333" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/x234"
                    android:layout_height="@dimen/y30"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginBottom="@dimen/x30"
                    android:background="@drawable/bg_login"
                    android:text="修改密码"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
